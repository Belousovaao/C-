                                                      BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                      MinWidth="100" MinHeight="30" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
